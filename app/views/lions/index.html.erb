<p id="notice"><%= notice %></p>

<h1>Lions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lions.each do |lion| %>
      <tr>
        <td><%= lion.name %></td>
        <td><%= lion.title %></td>
        <td><%= lion.content %></td>
        <td><% if lion.image.attached? %>
          YES<%else%>NOT YET
        <% end %>
        <td><%= link_to 'Show', lion %></td>
        <td><%= link_to 'Edit', edit_lion_path(lion) %></td>
        <td><%= link_to 'Destroy', lion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

